<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZooView.View.AnimalView">
  <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listAnimals" ItemsSource="{Binding Animals}" HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<TextCell Text="{Binding Id}"
                     Detail="{Binding Specie}"  />-->
                        <!--<ImageCell Text="{Binding Id}"
                     Detail="{Binding Specie}" ImageSource="{Binding Poza}" />-->
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Spacing="5">
                                    <Label Text="{Binding NumeComun}" FontSize="20"/>
                                    <Image Source="{Binding Poza}" WidthRequest="150" HeightRequest="150"/>
                                    <Label Text="{Binding Specie}" FontSize="18"/>
                                    <Label Text="{Binding GreutateMaxima}" FontSize="18"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
      </StackLayout>
  </ContentPage.Content>
</ContentPage>